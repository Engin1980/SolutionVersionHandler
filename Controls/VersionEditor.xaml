<UserControl x:Class="SolutionVersionHandler.Controls.VersionEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SolutionVersionHandler.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid DataContext="{Binding Version, RelativeSource={RelativeSource AncestorType={x:Type local:VersionEditor}}}">
    <StackPanel x:Name="pnlEmpty">
      <StackPanel.Style>
        <Style TargetType="StackPanel">
          <Setter Property="Visibility" Value="Collapsed" />
          <Style.Triggers>
            <DataTrigger Binding="{Binding}" Value="{x:Null}">
              <Setter Property="Visibility" Value="Visible" />
            </DataTrigger>
          </Style.Triggers>
        </Style>
      </StackPanel.Style>
      <Label>(not set)</Label>
    </StackPanel>
    <StackPanel x:Name="pnlVersion" Orientation="Horizontal">
      <StackPanel.Style>
        <Style TargetType="StackPanel">
          <Setter Property="Visibility" Value="Visible" />
          <Style.Triggers>
            <DataTrigger Binding="{Binding}" Value="{x:Null}">
              <Setter Property="Visibility" Value="Collapsed" />
            </DataTrigger>
          </Style.Triggers>
        </Style>
      </StackPanel.Style>
      <TextBox x:Name="txtMajor" Text="{Binding Major}" Width="25" Margin="2" />
      <TextBox x:Name="txtMinor" Text="{Binding Minor}" Width="25" Margin="2" />
      <TextBox x:Name="txtBuild" Text="{Binding Build}" Width="25" Margin="2" />
      <TextBox x:Name="txtRevision" Text="{Binding Revision}" Width="25" Margin="2" />
      <Button x:Name="btnSpreadAcrossProjects" Click="btnSpreadAcrossProjects_Click">⇅</Button>
      <Button x:Name="btnSpreadAcrossVersionTypes" Click="btnSpreadAcrossVersionTypes_Click">⇄</Button>
      <Button x:Name="btnRemoveVersion" Click="btnRemoveVersion_Click">⛒</Button>
    </StackPanel>
  </Grid>
</UserControl>

