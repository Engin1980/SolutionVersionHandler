<UserControl x:Class="SolutionVersionHandler.VersionEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SolutionVersionHandler"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="200">

  <Grid x:Name="grdData" 
        DataContext="{Binding ShownVersion, RelativeSource={RelativeSource AncestorType={x:Type local:VersionEditor}}}">
    <DockPanel x:Name="pnlEmpty">
      <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
        <Button x:Name="btnNewTextVersion" Content="(+txt)" Click="btnNewTextVersion_Click" Margin="4" />
        <Button x:Name="btnNewNumericVersion" Content="(+num)" Click="btnNewNumericVersion_Click" Margin="4" />
      </StackPanel>
      <Label>Empty</Label>
    </DockPanel>
    <DockPanel x:Name="pnlUnparseable">

      <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
        <Button x:Name="btnSpreadAcrossProjects2" Content="⇅" Click="btnSpreadAcrossProjects_Click" Margin="4" />
        <Button x:Name="btnSpreadAcrossVersionTypes2" Content="⇄" Click="btnSpreadAcrossVersionTypes_Click" Margin="4" />
        <Button x:Name="btnRemoveVersion2" Content="⛒" Click="btnRemoveVersion_Click" Margin="4" />
      </StackPanel>
      <TextBox Text="{Binding Unparseable}" />
    </DockPanel>
    <StackPanel x:Name="pnlVersion" Orientation="Horizontal">
      <TextBox x:Name="txtMajor" Text="{Binding Major}" Width="25" Margin="2" />
      <TextBox x:Name="txtMinor" Text="{Binding Minor}" Width="25" Margin="2" />
      <TextBox x:Name="txtBuild" Text="{Binding Build}" Width="25" Margin="2" />
      <TextBox x:Name="txtRevision" Text="{Binding Revision}" Width="25" Margin="2" />

      <Button x:Name="btnSpreadAcrossProjects" Content="⇅" Click="btnSpreadAcrossProjects_Click" Margin="4" />
      <Button x:Name="btnSpreadAcrossVersionTypes" Content="⇄" Click="btnSpreadAcrossVersionTypes_Click" Margin="4" />
      <Button x:Name="btnRemoveVersion" Content="⛒" Click="btnRemoveVersion_Click" Margin="4" />
    </StackPanel>
  </Grid>
</UserControl>

