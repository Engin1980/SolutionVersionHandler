<UserControl x:Class="SolutionVersionHandler.VersionEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SolutionVersionHandler"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <UserControl.Resources>
    <local:ProjectVersionMultiConverter x:Key="ProjectVersionMultiConverter" />
  </UserControl.Resources>

  <Grid DataContext="{Binding Version, RelativeSource={RelativeSource AncestorType={x:Type local:VersionEditor}}}">
    <StackPanel x:Name="pnlEmpty">
      <StackPanel.Style>
        <Style TargetType="StackPanel">
          <Setter Property="Visibility" Value="Collapsed" />
          <Style.Triggers>
            <DataTrigger Binding="{Binding}" Value="{x:Null}">
              <Setter Property="Visibility" Value="Visible" />
            </DataTrigger>
          </Style.Triggers>
        </Style>
      </StackPanel.Style>
      <Label>Empty</Label>
    </StackPanel>
    <StackPanel x:Name="pnlVersion" Orientation="Horizontal">
      <StackPanel.Style>
        <Style TargetType="StackPanel">
          <Setter Property="Visibility" Value="Visible" />
          <Style.Triggers>
            <DataTrigger Binding="{Binding}" Value="{x:Null}">
              <Setter Property="Visibility" Value="Collapsed" />
            </DataTrigger>
          </Style.Triggers>
        </Style>
      </StackPanel.Style>

      <TextBox x:Name="txtMajor" Text="{Binding Major}" Width="25" Margin="2" />
      <TextBox x:Name="txtMinor" Text="{Binding Minor}" Width="25" Margin="2" />
      <TextBox x:Name="txtBuild" Text="{Binding Build}" Width="25" Margin="2" />
      <TextBox x:Name="txtRevision" Text="{Binding Revision}" Width="25" Margin="2" />

      <Button x:Name="btnSpreadAcrossProjects" Content="⇅" Click="btnSpreadAcrossProjects_Click" Margin="4">
        <Button.Command>
          <Binding RelativeSource="{RelativeSource AncestorType=Window}" Path="DataContext.SpreadAcrossProjectsCommand" />
        </Button.Command>
        <Button.CommandParameter>
          <MultiBinding Converter="{StaticResource ProjectVersionMultiConverter}">
            <Binding RelativeSource="{RelativeSource AncestorType=DataGridRow}" Path="Item" />
            <Binding Path="." />
          </MultiBinding>
        </Button.CommandParameter>
      </Button>

      <Button x:Name="btnSpreadAcrossVersionTypes" Content="⇄" Click="btnSpreadAcrossVersionTypes_Click" Margin="4">
        <Button.Command>
          <Binding RelativeSource="{RelativeSource AncestorType=Window}" Path="DataContext.SpreadAcrossVersionTypesCommand" />
        </Button.Command>
        <Button.CommandParameter>
          <MultiBinding Converter="{StaticResource ProjectVersionMultiConverter}">
            <Binding RelativeSource="{RelativeSource AncestorType=DataGridRow}" Path="Item" />
            <Binding Path="." />
          </MultiBinding>
        </Button.CommandParameter>
      </Button>

      <Button x:Name="btnRemoveVersion" Content="⛒" Click="btnRemoveVersion_Click" Margin="4">
        <Button.Command>
          <Binding RelativeSource="{RelativeSource AncestorType=Window}" Path="DataContext.RemoveVersionCommand" />
        </Button.Command>
        <Button.CommandParameter>
          <MultiBinding Converter="{StaticResource ProjectVersionMultiConverter}">
            <Binding RelativeSource="{RelativeSource AncestorType=DataGridRow}" Path="Item" />
            <Binding Path="." />
          </MultiBinding>
        </Button.CommandParameter>
      </Button>
    </StackPanel>
  </Grid>
</UserControl>

