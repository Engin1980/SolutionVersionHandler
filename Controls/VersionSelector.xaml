<UserControl x:Class="SolutionVersionHandler.Controls.VersionSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SolutionVersionHandler.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <ComboBox x:Name="cmbVersionType" Width="100" Height="25">
    <ComboBoxItem Content="Version" />
    <ComboBoxItem Content="Assembly Version" />
    <ComboBoxItem Content="File Version" />
    <ComboBoxItem Content="Package Version" />
  </ComboBox>
</UserControl>